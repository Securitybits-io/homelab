# Full configuration options can be found at https://www.consul.io/docs/agent/config

datacenter = "dc"
data_dir = "/opt/consul"

log_level = "INFO"
log_file = "/etc/consul.d/"
log_rotate_max_files = "14"


{% if consul_type is defined and consul_type == 'client' %}
server = false
ui_config {
  enabled = false
}
{% else %}
bootstrap_expect=1
server = true
ui_config{
 enabled = true
}
{% endif %}
{% if consul_type is defined and consul_type == 'client' %}
client_addr = "127.0.0.1"
{% else %}
client_addr = "{{ ansible_default_ipv4.address }}"
{% endif %}
bind_addr = "{{ ansible_default_ipv4.address }}" #Local IP
#advertise_addr = "127.0.0.1"

retry_join = ["consul"]

ports {
  grpc = 8502
}

connect {
  enabled = true
}
