mounts:
  - name: private-ytdl
    src: //10.0.11.241/Securitybits.Private
    path: /youtube-dl
    opts: rw,username=private,password={{ vault_private_nidhoggr }},vers=3.0,file_mode=0660,dir_mode=0660
    type: cifs

opts: -N 5 --playlist-reverse --download-archive /youtube-dl/videos/downloaded.txt -i -o "/youtube-dl/videos/%(uploader)s/%(uploader)s_%(upload_date)s_%(title)s.%(ext)s" --merge-output-format mkv --add-metadata --write-thumbnail --write-description --batch-file=/opt/channel.list --compat-options playlist-index --write-info-json --embed-metadata --embed-thumbnail --use-postprocessor Stash:stashurl="http:private-docker-01:9999"\;when=after_video